{
  "manifest_version": 3,
  "name": "ХОХЛЕР",
  "version": "1.0",
  
  "permissions": ["storage"],

  "action": {
  },
  
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
